pipeline {
    agent {
        label 'jenkins-agent'
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '3'))
    }
    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/anujsankdecha/ansible-jenkins-project.git'
            }
        }
        stage('Deploy Ansible Playbook') {
            steps {
                dir('ansible-jenkins-project/') {  
                    sh 'ansible-playbook playbook.yaml'
                }
            }
        }
    }
}